!!!
%html
  %head
    %title Headwater Î²
    = stylesheet_link_tag "blueprint/screen", "application"
    = javascript_include_tag "jquery.js", "rails.js", "inscription.js"
    = javascript_include_tag "stories.js", "time_tracker.js"
    = csrf_meta_tag

  %body{:class => params[:controller]}
    #wrapper
      #header
        .content
          = link_to "Projects", projects_path
          = link_to "Time tracking", time_entries_path
          - if user_signed_in?
            %br
            You are logged in:
            = current_user.email
            = link_to "Log out", destroy_user_session_path
      #main
        #sidebar
          %h2 Main
          %ul.simple.navigation
            %li= link_to "Dashboard", projects_path
          - if @projects
            %h2 Projects
            %ul.simple.navigation
              - @projects.each do |project|
                %li{:class => viewing?(project) ? "active" : ""}
                  %a{:href => project_path(project)}= project.name
        #document
          - if flash[:notice]
            %p.notice= flash[:notice]
          - if flash[:alert]
            %p.error= flash[:alert]
          = yield
        #inspector.hidden
        
      #footer
        #footer_main
          = yield(:footer)
        
    - if user_signed_in?
      #time_tracker{:"data-path" => current_time_entries_path}
        This is a time tracker!
